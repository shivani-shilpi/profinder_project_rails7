<%= form_with(model: [ notable, @note ], local: true) do |f| %>
    <div class="modal-body">
       <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: "form-control" %>
       </div>
 
       <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, class: "form-control" %>
       </div>
 
       <div class="form-group">
          <%= f.submit %>
       </div>
    </div>   
<% end %>